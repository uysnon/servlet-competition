<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Web Chat</display-name>

    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>ru.rseu.gorkin.web.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>userRightsFilter</filter-name>
        <filter-class>ru.rseu.gorkin.web.filters.UserRightsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>userRightsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>accountStatusFilter</filter-name>
        <filter-class>ru.rseu.gorkin.web.filters.AccountStatusFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>accountStatusFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

